    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/buttonDaftar"
        android:textColor="#fff"
        android:background="@drawable/desain_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"/>

</LinearLayout>